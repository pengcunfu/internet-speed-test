    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "Clean Python Cache",
            "type": "shell",
            "command": "find",
            "args": [
                ".",
                "-type",
                "d",
                "-name",
                "__pycache__",
                "-exec",
                "rm",
                "-rf",
                "{}",
                "+"
            ],
            "problemMatcher": [],
            "group": "build",
            "detail": "Remove all __pycache__ directories"
        },
        {
            "label": "Clean Python Cache (Windows)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Get-ChildItem -Path . -Recurse -Directory -Name '__pycache__' | ForEach-Object { Remove-Item -Path $_ -Recurse -Force }"
            ],
            "problemMatcher": [],
            "group": "build",
            "detail": "Remove all __pycache__ directories on Windows"
        }
    ]
}